golden = #d6b161;
*
	box-sizing border-box
body
	font-family "Source Sans Pro", sans-serif
	font-size 15px
	font-weight 400
	line-height 1.5
i 
	font-style normal
p
	color #7e7e7e
	line-height 30px
h2 
	margin 0 
h3 
	margin 0
ul
	margin 0 
	list-style-type none
img
	display block
a
	text-decoration none
	transition all 0.3s
	&:hover
		text-decoration none
#header
	position fixed
	width 100%
	z-index 100
.clearfix:after 
	content " "
	display table
	clear both
.row 
	margin 0 -10px
.col-3
	width 25%
.col-4
	width 33.33333%
.col-6
	width 50%
.col-3,.col-4,.col-6
	padding 0 10px
	float left
.button
		color #222
		background #fff
		padding 15px 30px
		font-size 14px
		font-weight 200
		margin-top 30px
		display inline-block
		text-transform uppercase
		transition all 0.3s
.container
	width 1170px
	margin 0 auto
	display block
.logo
	float left
	height 100%
	a
		display inline-block
		height 56px
	img
		width auto
		height 56px
		display inline-block
.nav
	float right
	text-transform uppercase
	line-height 96px
	li
		float left
		a
			color #333
			padding 0 12px
			font-size 12px
			&:hover
				color golden
.boundary:after
	content "|"
	padding 12px
.nav .active a
	color : golden
.dark a
	color #222
.light a
	color white
#content > hr
	border-top 1px solid #eee
	margin 0
	
/* content */
#content > div
	padding-top 100px
	&:first-child
		padding-top 0
.slider
	position absolute
	top 40%
	left 45%
	width 100%
	h1 
		font-size 80px
		text-transform uppercase
		font-weight 300
		margin 0
		letter-spacing 3px
	h3
		font-size 34px
		font-weight normal
		letter-spacing 20px
.slider-2
	position absolute
	top 45%
	left 15%
	width 100%
	h1 
		font-size 80px
		text-transform uppercase
		font-weight 300
		margin 0
		letter-spacing 3px
		color white
	h3
		font-size 34px
		font-weight normal
		letter-spacing 20px
		color white
		margin-top 30px
.slider-3
	position absolute
	top 33%
	left 27%
	width 100%
	h1 
		font-size 80px
		text-transform uppercase
		font-weight 300
		margin 0
		letter-spacing 3px
	h3
		font-size 34px
		font-weight normal
		letter-spacing 20px
		margin-top 15px
.slider img
	width 100%
	height auto
.category
	position relative
	margin-bottom 20px
	img
		width 100%
		height auto
	span
		position absolute
		top 35%
		right 10%
		text-align right
		text-transform uppercase
		font-size 24px
		font-weight 100
		line-height 1.5
.intro
	text-align center
	h2
		color #333
		letter-spacing 2px
		padding-bottom 10px	
		text-transform uppercase
		font-weight 300
	hr
		width 60px
		margin 0 auto
		height 2px
		background #595959
		border none
	p
		color #7e7e7e
.products
	padding-top 100px 
	.col-4
	text-align center 
		img
			width 100%
			height auto
.title
	margin 0
	letter-spacing 1px
	text-transform uppercase
	font-size 14px
	a
		color #222
.price
	margin 0	
	letter-spacing 1px
	text-transform uppercase
	color #7e7e7e
	font-size 12px
	font-weight normal
	line-height 30px
.thumbnail
	position relative
	.cover
		position absolute
		top 0
		left 0
		background rgba(255,255,255,0.9)
		width 100%
		height 100%
		border 20px solid rgba(0,0,0,0.1)
		opacity 0
		transition all 0.3s
		text-align center
		&:hover
			opacity 1
		a
			color #333
			position absolute
			top 45%
.recent-product
	padding-bottom 100px
.event
	background-image url(../image/para1.jpg)
	background-size cover
	background-position 50% 50%
	background-attachment fixed
	padding 150px 0
	.title
		color #fff
		font-size 70px
		letter-spacing 2px
		font-weight 100
	.subtitle
		color #fff
		font-size 24px
		letter-spacing 2px
		line-height 1.5
		font-weight normal
	.button:hover
		color white
		background golden
.featured
	padding-bottom 100px
.featured .col-6
	padding 0 30px 
	img
		width 100%
		height auto
.featured .info
	text-align center
	margin-top 70px
	.title
		color golden
	.name
		font-weight normal
		margin 0 
		letter-spacing 1px
		margin-bottom 10px
		a
			color #333
			transition all 0.3s
			&:hover
				color golden
	.button:hover
		color white
		background #333
	p
		margin-bottom 30px
		padding-top 30px 
	.price
		color golden
		font-size 26px
		font-weight 300
		line-height 36px
	.button 
		border solid 1px #222
.outlets
	padding-bottom 100px
.outlet 
	h3
		margin-bottom 30px
		text-transform uppercase
		font-weight normal
	.info
		color #7e7e7e
		line-height 30px
		font-weight normal
		font-size 14px
		text-transform capitalize
		a
			text-decoration none
			color #7e7e7e
	.map a
		color golden	
.intro
	margin-bottom 100px	

/* footer */

#footer
	background #f5f5f5
	position relative
	padding 80px 0
	.b-logo
		position absolute
		border 5px solid #f5f5f5
		padding 20px
		background #fff
		top -50px
		left 50%
		transform translateX(-50%)
		img
			height 52px
			width 57px
	.copyright
		float left
		.title
			letter-spacing 2px
			color #000
			font-size 14px
		.subtitle
			letter-spacing 1px
			font-size 12px
			color #323232
	.social-media
		float right
		li
			float left
			a
				display inline-block
				width 40px
				height 40px
				color #222
				border 1px solid #222
				border-radius 20px
				text-align center
				line-height 40px
				margin 10px
				transition all 0.3s
				&:hover
					color white
					background #333
#go-top
	position fixed
	right 20px 
	bottom 20px
	width 40px
	height 40px
	text-align center
	background rgba(0, 0, 0, .6)
	line-height 40px
	transition all 0.3s
	&:hover
		background golden
	a
		color #fff
		transition all 0.3s
		&:hover
			color #333
			
	
			