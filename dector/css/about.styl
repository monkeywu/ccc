golden = #d6b161;
*
	box-sizing border-box
body
	font-family "Source Sans Pro", sans-serif
	font-size 15px
	font-weight 400
	line-height 1.5
i 
	font-style normal
p
	color #7e7e7e
	line-height 30px
h2 
	margin 0 
h3 
	margin 0
ul
	margin 0 
	list-style-type none
img
	display block
a 
	text-decoration none
	transition all 0.3s
	display inline-block
	color #333
	
a:hover {
	text-decoration none
	color golden
}
				/* about */
#go-top
	position fixed
	right 20px 
	bottom 20px
	width 40px
	height 40px
	text-align center
	background rgba(0, 0, 0, .6)
	line-height 40px
	transition all 0.3s
	&:hover
		background golden
	i
		display block
		a
			color #fff
			&:hover
				color #333
.wrap 
	height 100px
.about
	height 100px
	background white
	transition height 0.3s
	position fixed
	z-index 100
	width 100%
.full-width
	width 100%
	height 100%
	padding 0 30px
	.row
		height 100%
		.logo
			height 100%
			a
				height 100%
				img 
					height 100%
					width auto
					transition height 0.3s
		.nav
			transform translateY(-50%)
			position relative
			top 50%
			a
				padding 0 12px
				font-size 12px
				text-transform uppercase
				letter-spacing 2px
.boundary:after
	content '|'
	padding 0 12px
//       content     //
.header
	height auto
	padding 200px 0
	background-image url("../image/about/1.jpg")
	background-repeat no-repeat
	background-position 50% 0
	background-size cover
	height 48px
	h3
		color #fff
		letter-spacing 2px
		font-weight normal
		font-size 20px
		position relative
		top 50%
		transform translateY(-50%)
.breadcrumb
	padding 15px
	background rgba(0, 0, 0, .5)
	margin 0
	color white
	font-weight 100
	font-size 12px
	li
		letter-spacing 1px
		a
			color #7e7e7e
			&:hover
				color #fff
			